<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="uc1" author="jpa-madness">
        <comment>Create UC1 tables</comment>
        <sqlFile
                path="sql/uc1_tables.sql"
                relativeToChangelogFile="true"
                />
    </changeSet>
    <changeSet id="uc2" author="jpa-madness">
        <comment>Create UC2 tables</comment>
        <createTable tableName="uc2_city">
            <column name="id" type="varchar(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="uc3" author="jpa-madness" runAlways="true">
        <comment>Create UC3 tables</comment>
        <sqlFile
                path="sql/uc3_tables.sql"
                relativeToChangelogFile="true"
        />
    </changeSet>
</databaseChangeLog>