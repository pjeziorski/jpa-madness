<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="uc01" author="jpa-madness">
        <comment>Create UC1 tables</comment>
        <sqlFile
                path="sql/uc01_tables.sql"
                relativeToChangelogFile="true"
                />
    </changeSet>

    <changeSet id="uc02" author="jpa-madness">
        <comment>Create UC2 tables</comment>
        <createTable tableName="uc02_city">
            <column name="id" type="varchar(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="uc03" author="jpa-madness" runAlways="true">
        <comment>Create UC3 tables</comment>
        <sqlFile
                path="sql/uc03_tables.sql"
                relativeToChangelogFile="true"
        />
    </changeSet>

    <changeSet id="uc06" author="jpa-madness" runAlways="true">
        <comment>Create UC6 tables</comment>
        <sqlFile
                path="sql/uc06_tables.sql"
                relativeToChangelogFile="true"
        />
    </changeSet>

    <changeSet id="uc08_single" author="jpa-madness" runAlways="true">
        <comment>Create UC8 single tables</comment>
        <sqlFile
                path="sql/uc08_single_tables.sql"
                relativeToChangelogFile="true"
        />
    </changeSet>
</databaseChangeLog>